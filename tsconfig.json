{
  "include": ["lib/**/*", "components/**/*", "pages/**/*", "next-env.d.ts"],
  "exclude": ["node_modules", "cypress/**/*"],
  "compilerOptions": {
    "paths": {
      "lib/*": ["lib/*"],
      "components/*": ["components/*"],
      "pages/*": ["pages/*"]
    },
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "preserve",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "types": ["jest", "node"],
    "strict": true,
    "allowJs": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  }
}
