{
  "include": ["src/**/*", "next-env.d.ts"],
  "exclude": ["node_modules", "cypress/**/*"],
  "compilerOptions": {
    "paths": {
      "components/*": ["src/components/*"],
      "hooks/*": ["src/hooks/*"],
      "pages/*": ["src/pages/*"],
      "styles/*": ["src/styles/*"]
    },
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "preserve",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "types": ["jest", "node"],
    "outDir": "build",
    "strict": true,
    "allowJs": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true
  }
}
